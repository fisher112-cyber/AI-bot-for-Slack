{
  "display_information": {
    "name": "CompanyInfoBot",
    "description": "Корпоративный инфо-бот: новости, ответы, эскалация"
  },
  "features": {
    "bot_user": {
      "display_name": "CompanyInfoBot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "app_mentions:read",
        "im:read",
        "im:history",
        "channels:read",
        "users:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.im"
      ]
    },
    "socket_mode_enabled": true
  }
}
